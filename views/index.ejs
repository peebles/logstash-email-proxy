    <!-- The footer is a BS navbar, fixed to the page bottom -->
    <div class="navbar navbar-default navbar-fixed-bottom" role="navigation">
      <ul class="nav navbar-nav navbar-left">
	<li>
	  <div class="search input-group">
	    <input type="text" class="form-control" placeholder="Search Expression" />
	    <span class="input-group-btn">
	      <button onclick="search();" class="btn"><i class="glyphicon glyphicon-search"></i></button>
	    </span>
	  </div>
	</li>
	<li>
	  <button style="display: none;" class="save-event btn btn-primary" onclick="save_event();">
	    Save Event...
	  </button>
	</li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
	<li>
	  <button onclick="toggle();" class="play-pause btn"><i class="glyphicon glyphicon-pause"></i></button>
	</li>
	<li>
	  <button onclick="cleartext();" class="clear btn"><i class="glyphicon glyphicon-flash"></i></button>
	</li>
	<li>
	  <button onclick="window.location='/admin';" class="event-editor btn"><i class="glyphicon glyphicon-cog"></i></button>
	</li>
      </ul>
    </div>


    <div class="modal fade" id="event-dialog" tabindex="-1" 
	 role="dialog" aria-labelledby="event-dialog-label" aria-hidden="true">
      <div class="modal-dialog">
	<div class="modal-content">
	  <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
	      <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
	    </button>
            <h4 class="modal-title" id="event-dialog-label">Save as Event</h4>
	  </div>
	  <div class="modal-body">
	    <div class="expr">
	      <form class="form-horizontal" role="form">
		<div class="form-group">
		  <label for="ename" class="col-sm-2 control-label">Name:</label>
		  <div class="col-sm-10">
		    <input name="ename" id="ename" class="form-control" type="text" placeholder="Event Name" />
		  </div>
		</div>
		<div class="form-group">
		  <label class="col-sm-2 control-label">Expression:</label>
		  <div class="col-sm-10">
		    <input name="regex" id="regex" class="form-control" type="text" placeholder="Expression" />
		  </div>
		</div>
	      </form>
	    </div>
	    <button class="adduser-btn btn btn-primary" onclick="adduser();">
	      <i class="glyphicon glyphicon-plus"></i>&nbsp;Add Email
	    </button>
	    <table class="dialog-table table table-striped">
	      <tr><td></td><td></td><td></td></tr>
	    </table>
	  </div>
	  <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal">Done</button>
	  </div>
	</div>
      </div>
    </div>

    <div class="modal fade" id="error-dialog" tabindex="-1" 
	 role="dialog" aria-labelledby="error-dialog-label" aria-hidden="true">
      <div class="modal-dialog">
	<div class="modal-content">
	  <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
	      <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
	    </button>
            <h4 class="modal-title" id="error-dialog-label">Error</h4>
	  </div>
	  <div class="modal-body">
	    <p class="error-message"></p>
	  </div>
	  <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
	  </div>
	</div>
      </div>
    </div>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="http://jquery-ui.googlecode.com/svn/tags/latest/ui/jquery.effects.core.js"></script>
    <script src="http://jquery-ui.googlecode.com/svn/tags/latest/ui/jquery.effects.slide.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="/js/moment.min.js"></script>
    <script src="/js/app.js"></script>
  </body>
</html>
